<Window x:Name="My_super_awesome_thign" x:Class="WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Background="Aquamarine"
        Title="Awesome Thing" SizeToContent="Height" Width="600">
    <Grid>
        <Button Content="Go Crazy!" Margin="450,132,24,0" VerticalAlignment="Top" Click="Button_Click" Height="20"/>
        <Label x:Name="CountLabel" Content="You have clicked 0 times!" HorizontalAlignment="Left" Margin="445,157,0,0" VerticalAlignment="Top" Height="26" Width="139"/>
        <Canvas ClipToBounds="True" Width="400" Height="400" Margin="0,0,200,0" Background="AliceBlue">
            <Rectangle x:Name="MovableSquare" Height="100" Width="100" Canvas.Left="10" Canvas.Bottom="0"  Stroke="Black" Fill="Green" />
        </Canvas>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Margin="450,91,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Write a number:" HorizontalAlignment="Left" Margin="450,65,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
